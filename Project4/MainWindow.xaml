<Window x:Class="Project4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="SkyBlue">
        <TextBlock Height="23" HorizontalAlignment="Left"  Name="textBlock1" Text="Email" VerticalAlignment="Top" Width="67" Margin="160,107,0,0" />
        <TextBlock Height="23" HorizontalAlignment="Left"  Name="textBlock2" Text="Password" VerticalAlignment="Top" Width="77" Margin="160,194,0,0" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="242,107,0,0" x:Name="email" VerticalAlignment="Top" Width="246" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="242,194,0,0" x:Name="password" VerticalAlignment="Top" Width="247" />
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="242,248,0,0" Name="login" VerticalAlignment="Top" Width="104" Click="login_Click"  />
        <Button Content="Register" Height="23" HorizontalAlignment="Left" Margin="385,248,0,0" Name="register" VerticalAlignment="Top" Width="104" Click="register_Click"  />
    </Grid>

</Window>
